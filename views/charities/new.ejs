<% include ../partials/header %>
<div class="row">
    
    <div style="width: 30%; margin: 25px auto;">
        <h1 style="text-align: center; color: #000;">Raise a new issue </h1>
        <form action="/charities" method="POST">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="text" name="name" id="name" placeholder="">
            </div>
            <div class="form-group">
                <label for="image">Image Url</label>
                <input class="form-control" type="text" name="image" id="image"
                    placeholder="" required>            
            </div>
           
            <div class="form-group">
                <label for="description">Description</label>
                <textarea class="form-control" type="text" name="description" id="description" rows="8">
                                    
                </textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/charities">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>